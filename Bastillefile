CONFIG set allow.sysvipc=1

RESTART

PKG zabbix7-agent

CMD sed -i '' 's%Server=127.0.0.1%Server=10.0.0.30%g' /usr/local/etc/zabbix7/zabbix_agentd.conf
CMD sed -i '' 's%ServerActive=127.0.0.1%ServerActive=10.0.0.30%g' /usr/local/etc/zabbix7/zabbix_agentd.conf
CMD sed -i '' 's%Hostname=Zabbix server%Hostname=Zabbix_Server%g' /usr/local/etc/zabbix7/zabbix_agentd.conf
CMD sysctl security.jail.allow_raw_sockets

SERVICE zabbix_agentd enable
SERVICE zabbix_agentd start